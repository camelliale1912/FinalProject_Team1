@model FinalProject_Team1.Models.Subject

@{
    ViewData["Title"] = "Delete Subject";
}

<div class="container mt-4">
    <h1>Delete Subject</h1>
    
    <div class="alert alert-danger">
        <h4>Are you sure you want to delete this subject?</h4>
        <p>This action cannot be undone. Any books associated with this subject will be affected.</p>
    </div>

    <div class="card">
        <div class="card-header">
            <h3>@Model.Name</h3>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Name)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>
                
                <dt class="col-sm-3">Books</dt>
                <dd class="col-sm-9">@(Model.BookSubjects?.Count ?? 0)</dd>
            </dl>
        </div>
    </div>
    
    <form asp-action="Delete" class="mt-3">
        <input type="hidden" asp-for="SubjectId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
